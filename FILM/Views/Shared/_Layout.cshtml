@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/nullStyle.css">
    <link rel="stylesheet" href="~/css/site.css">
    <title>Document</title>
</head>
<body>
    <script src="~/js/site.js"></script>
    <div class="container">
        <div class="header">
            <div class="header__burger">
            <a asp-action="Index" asp-controller="Home" class="burger__logo"><img src="~/img/FILM.png" alt=""></a>
             <div class="burger__inforamtion">
                    <a class="text1" asp-action="Index" asp-controller="Home" asp-route-searchNew="@DateTime.Now.Year.ToString()"><img class="information__ico" src="~/img/news.png" alt="">Новинки</a>
                    <a class="text1" asp-action="Index" asp-controller="Home" asp-route-searchType="Фильм"><img class="information__ico" src="~/img/filmpng.png" alt="">Фильмы</a>
                    <a class="text1" asp-action="Index" asp-controller="Home" asp-route-searchType="Сериал"><img class="information__ico" src="~/img/series.png" alt="">Сериалы</a>
                    <a class="text1" asp-action="Index" asp-controller="Home" asp-route-searchType="Мультфильм"><img class="information__ico" src="~/img/cartoon.png" alt="">Мультфильмы</a>
                </div>
            </div>
                <form asp-action="Profile" asp-controller="Profile" method="post" enctype="multipart/form-data">
                    <button type="submit" class="profile"><img src="~/img/profile.png" alt=""></button>
                </form>
            
        </div>
        <div class="content">
            @RenderBody();
        </div>
    </div>
</body>
</html>